<resources>
    <!-- the padding on the end of the statusbar -->
    <dimen name="status_bar_padding_start">16.0dip</dimen>

    <!-- the padding on the end of the statusbar -->
    <dimen name="status_bar_padding_end">8.0dip</dimen>

    <!-- Margin on the right side of the system icon group on Keyguard. -->
    <dimen name="system_icons_keyguard_padding_end">@dimen/status_bar_padding_end</dimen>

    <!--  Lockscreen shortcut horizontal padding.  -->
    <dimen name="keyguard_affordance_horizontal_offset">29dp</dimen>

    <!-- Margin on the left side of the carrier text on Keyguard -->
    <dimen name="keyguard_carrier_text_margin">95px</dimen>

    <dimen name="keyguard_indication_margin_bottom">15dp</dimen>
    
    <!-- Location on the screen of the center of the physical power button. -->
    <dimen name="physical_power_button_center_screen_location_y">1250px</dimen>

    <!-- Location on the screen of the center of the physical volume up/down buttons. -->
    <dimen name="physical_volume_up_button_center_screen_location_y">750px</dimen>
    <dimen name="physical_volume_down_button_center_screen_location_y">1025px</dimen>

    <!-- Microns/ums (1000 um = 1mm) per pixel for the given device. If unspecified, UI that
         relies on this value will not be sized correctly. -->
    <item name="pixel_pitch" format="float" type="dimen">49.3</item>

    <!-- QS Panel status bar padding fix. -->
    <dimen name="large_screen_shade_header_left_padding">28dp</dimen>
    <dimen name="hover_system_icons_container_padding_end">10dp</dimen>
</resources>
